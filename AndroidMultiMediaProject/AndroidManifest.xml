<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.pyo.android.multimedia"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="AndroidMultiMediaListActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="CameraPhoneGalleryIntentActivity" />
        <activity android:name="CameraSurfaceViewActivity"
		        	android:screenOrientation="landscape" 
        			android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="VideoRecorderIntentActivity" 
                    android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="AudioMediaPlayerActivity"
                    android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="MediaPlayerActivity" />
        <activity android:name=".AndroidVideoViewUsingActivity" />
        <activity android:name="VideoViewSurfaceUsingActivity" />
        <activity android:name="VideoRecorderIntentActivity" 
                    android:screenOrientation="landscape"/>
        <activity android:name="AudioRecorderIntentActivity" />
        <activity android:name="VideoRecorderSurfafceUsingActivity"
                    android:screenOrientation="landscape" />
        <activity android:name="AudioRecorderActivity" />
        <activity android:name="AudioTrackSineWaveActivity"
                    android:screenOrientation="landscape" />
        <activity android:name="SoundPoolUsingActivity" 
                    android:screenOrientation="portrait"/>
    </application>
     <uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
	<uses-feature android:name="android.hardware.camera" />
	
    <uses-sdk android:minSdkVersion="8" />
</manifest>